<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/landing_top_strip" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landing_client_logo"
                        android:layout_gravity="bottom"
                         />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/mobi_remit_logo"
                        android:layout_gravity="bottom" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--android:background="@drawable/bg"-->
        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1.10"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay13"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight=".6">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay14"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/landing_bg_strip" >

                <LinearLayout
                    android:id="@+id/lay15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/landing_new_user"
                        android:layout_gravity="center_vertical|left"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="35dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/landing_login"
                        android:layout_gravity="center_vertical|left"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_margin="25dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lay10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal" >

                        <ImageView
                            android:id="@+id/imageView_rates"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="icon"
                            android:gravity="right"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/our_rates" />

                        <TextView
                            android:id="@+id/textView_rates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView_rates"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:text="Our Rates" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal" >

                        <ImageView
                            android:id="@+id/imageView_Branches"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="icon"
                            android:gravity="right"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/our_branches" />

                        <TextView
                            android:id="@+id/textView_branches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView_Branches"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:text="Our Branches" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal" >

                        <ImageView
                            android:id="@+id/imageView_news"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="icon"
                            android:gravity="right"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/our_news" />

                        <TextView
                            android:id="@+id/textView_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView_news"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:text="News &amp; Events" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_terms"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:text="Terms &amp; Conditions"
                    android:padding="2dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtView_policy"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:text="Privacy Policy"
                    android:padding="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
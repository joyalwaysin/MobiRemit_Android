<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/moreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/morefragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/profile_row"
                            android:onClick="true"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/ProfileImage"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:src="@drawable/ic_user"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:textSize="16sp"
                                android:text="My Profile"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.01" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:maxWidth="5dp"
                                android:src="@drawable/right_arrow"
                                android:layout_alignParentTop="false"
                                android:layout_gravity="right"
                                android:layout_alignParentLeft="false" />
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:background="@color/lightBorder"
                            android:layout_gravity="right"
                            android:layout_marginLeft="55dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/beneficiary_row"
                            android:onClick="true"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/BeneficiaryImage"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:src="@drawable/ic_beneficiary"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:textSize="16sp"
                                android:text="Beneficiary"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.01" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:maxWidth="5dp"
                                android:src="@drawable/right_arrow"
                                android:layout_alignParentTop="false"
                                android:layout_gravity="right"
                                android:layout_alignParentLeft="false" />
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:background="@color/lightBorder"
                            android:layout_gravity="right"
                            android:layout_marginLeft="55dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/cancel_row"
                            android:onClick="true"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/CancelImage"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:src="@drawable/cancel_ico"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:textSize="16sp"
                                android:text="Cancel Remittance"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.01" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:maxWidth="5dp"
                                android:src="@drawable/right_arrow"
                                android:layout_alignParentTop="false"
                                android:layout_gravity="right"
                                android:layout_alignParentLeft="false" />
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:background="@color/lightBorder"
                            android:layout_gravity="right"
                            android:layout_marginLeft="55dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/about_row"
                            android:onClick="true"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/AboutImage"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:src="@drawable/about_ico"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:textSize="16sp"
                                android:text="About"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.01" />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:padding="5dp"
                                android:maxWidth="5dp"
                                android:src="@drawable/right_arrow"
                                android:layout_alignParentTop="false"
                                android:layout_gravity="right"
                                android:layout_alignParentLeft="false" />
                        </LinearLayout>





                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/Logout_row"
                        android:onClick="true"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/SignoutImage"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:src="@drawable/logout_ico"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_width="40dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp"
                            android:textSize="16sp"
                            android:text="Logout"
                            android:id="@+id/LogoutTitle"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>